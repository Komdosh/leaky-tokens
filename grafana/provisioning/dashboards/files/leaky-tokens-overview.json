{
  "uid": "leaky-tokens-overview",
  "title": "Leaky Tokens Overview",
  "tags": ["leaky-tokens"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "stat",
      "title": "API Gateway RPS",
      "gridPos": {"x": 0, "y": 0, "w": 8, "h": 4},
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{application=\"api-gateway\"}[1m]))",
          "legendFormat": "rps"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Token Service RPS",
      "gridPos": {"x": 8, "y": 0, "w": 8, "h": 4},
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{application=\"token-service\"}[1m]))",
          "legendFormat": "rps"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Analytics Service RPS",
      "gridPos": {"x": 16, "y": 0, "w": 8, "h": 4},
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{application=\"analytics-service\"}[1m]))",
          "legendFormat": "rps"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "HTTP Latency (p95)",
      "gridPos": {"x": 0, "y": 4, "w": 24, "h": 6},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket[5m])) by (le, application))",
          "legendFormat": "{{application}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "JVM Heap Used",
      "gridPos": {"x": 0, "y": 10, "w": 24, "h": 6},
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{area=\"heap\"}",
          "legendFormat": "{{application}}"
        }
      ]
    }
  ],
  "templating": {
    "list": []
  }
}
